<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>

<p>Ingredients:</p>
<% unless @cocktail.doses.any? %>
  <%= "None added yet" %>
<% end %>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.ingredient.name %><%= link_to 'Delete', dose, method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end %>
</ul>

<%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
<%= link_to 'Back', cocktails_path %>

